<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.authorisation.mycollectsub">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCollectSub"
        tools:targetApi="31">
        <activity
            android:name=".ItemAdapter"
            android:exported="false"
            android:theme="@style/Theme.MyCollectSub" />
        <activity
            android:name=".GoalAdapter"
            android:exported="false"
            android:theme="@style/Theme.MyCollectSub" /> <!-- Splash Activity as the launcher activity -->
        <activity
            android:name=".Splash"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.MyCollectSub">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LogIn Activity -->
        <activity
            android:name=".LogIn"
            android:exported="false"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.MyCollectSub"
            android:windowSoftInputMode="adjustPan" /> <!-- SignUp Activity -->
        <activity
            android:name=".SignUp"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.MyCollectSub"
            android:windowSoftInputMode="adjustPan" /> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" /> <!-- ViewCollections Activity -->
        <activity
            android:name=".ViewCollectionsActivity"
            android:exported="false"
            android:label="@string/title_activity_view_collections"
            android:theme="@style/Theme.MyCollectSub" />
    </application>

</manifest>